<p id="notice"><%= notice %></p>

<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Initial</th>
      <th>Amount</th>
      <th>Purchaseprice</th>
      <th>Purchasedate</th>
      <th>Saledate</th>
      <th>Amountbuyinbtc</th>
      <th>Amountsellinbtc</th>
      <th>Endoperation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.name %></td>
        <td><%= coin.initial %></td>
        <td><%= coin.amount %></td>
        <td><%= coin.purchasePrice %></td>
        <td><%= coin.purchaseDate %></td>
        <td><%= coin.saleDate %></td>
        <td><%= coin.amountBuyInBTC %></td>
        <td><%= coin.amountSellInBTC %></td>
        <td><%= coin.endOPeration %></td>
        <td><%= link_to 'Show', coin %></td>
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

